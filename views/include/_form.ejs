
<form action="/api/users" method="POST" id="add_user" >
<div class="new_user">
    <div class="form-group">
        <label for="name" class="text-light">Patient Name</label>
        <input type="hidden" name="id" value="">
        <input type="text" name="name" value="" placeholder="@name">
    </div>
    <div class="form-group">
        <label for="email" class="text-light">Email</label>
        <input type="text" name="email" value="" placeholder="example@gmail.com">
    </div>
    <div class="form-group">
        <label for="age" class="text-light">Age</label>
        <input type="text" name="age" value="" placeholder="@age" maxlength="2" >
    </div>
    <div class="form-group">
        <label for="gender" class="text-light">Gender</label>
        <div class="radio inline">
            <input type="radio" id="radio-2"  class="radio" name="gender" value="Male">
            <label for="radio-2" class="radio-label">Male</label>
        </div>
        <div class="radio inline">
            <input type="radio" id="radio-3"  class="radio" name="gender" value="Female">
            <label for="radio-3" class="radio-label">Female</label>
        </div>
    </div>
    <div class="form-group">
        <label for="cell" class="text-light">Cell</label>
        <input type="text" name="cell" value="" placeholder="xxxxxxxxxx" maxlength="10">
    </div>
    <div class="form-group">
        <label for="dob" class="text-light">DOB</label>
        <input type="text" name="dob" value="" placeholder="dd/mm/yyyy">
    </div>
    <div class="form-group">
        <label for="marital" class="text-light">Marital</label>
        <div class="radio inline">
            <input type="radio" id="radio-4"  class="radio" name="marital" value="Single">
            <label for="radio-4" class="radio-label">Single</label>
        </div>
        <div class="radio inline">
            <input type="radio" id="radio-5"  class="radio" name="marital" value="Married">
            <label for="radio-5" class="radio-label">Married</label>
        </div>
        <div class="radio inline">
            <input type="radio" id="radio-6" class="radio" name="marital" value="Divorced">
            <label for="radio-6" class="radio-label">Divorced</label>
        </div>
        <div class="radio inline">
            <input type="radio" id="radio-7" class="radio" name="marital" value="Widow">
            <label for="radio-7" class="radio-label">Widow</label>
        </div>
    </div>
    <div class="form-group">
        <label for="address" class="text-light">Address</label>
        <input type="text" name="address" value="" placeholder="@address">
    </div>
    <div class="form-group">
        <label for="status" class="text-light">Status</label>
        <input type="text" name="status" value="" placeholder="check in/ check out">
    </div>
    <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>
</div> 
</form>
